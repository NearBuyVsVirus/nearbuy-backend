{
  "name": "nexd-api",
  "version": "0.1.0",
  "description": "API for the Nexd App",
  "authors": [
    "Rossana Bermudez <rossana.bermudezd@gmail.com"
  ],
  "license": "MIT",
  "private": true,
  "repository": "git@github.com:NearBuyVsVirus/nearbuy-backend.git",
  "scripts": {
    "start": "node_modules/.bin/cross-env NODE_ENV=development ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "node_modules/.bin/nodemon",
    "start:debug": "node_modules/.bin/nodemon --config nodemon-debug.json",
    "prestart:prod": "tsc",
    "start:prod": "node_modules/.bin/cross-env NODE_ENV=production node dist/main.js",
    "docs": "npx compodoc -p tsconfig.json -d documentation",
    "tscheck:w": "node_modules/.bin/tsc -w",
    "format": "node_modules/.bin/prettier --write \\\"src/**/*.ts\\\"",
    "lint": "node_modules/.bin/tslint --fix",
    "test": "node_modules/.bin/jest",
    "test:watch": "node_modules/.bin/jest --watch",
    "test:cov": "node_modules/.bin/jest --coverage",
    "test:e2e": "node_modules/.bin/jest --config ./test/jest-e2e.json",
    "hmr": "node dist/server",
    "webpack": "node_modules/.bin/webpack --config webpack.config.js",
    "deploy:local": "docker-compose up -d"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run format",
      "npm run lint",
      "git add"
    ]
  },
  "dependencies": {
    "@compodoc/compodoc": "^1.1.11",
    "@nestjs/common": "^6.10.14",
    "@nestjs/core": "^6.10.14",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/passport": "^6.1.1",
    "@nestjs/platform-express": "7.0.0",
    "@nestjs/serve-static": "^2.1.0",
    "@nestjs/swagger": "^4.1.10",
    "@nestjs/testing": "^6.10.14",
    "@nestjs/typeorm": "^6.2.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.3",
    "@types/helmet": "^0.0.45",
    "@types/jest": "^24.0.25",
    "@types/joi": "^14.3.4",
    "@types/multer": "^1.4.2",
    "@types/multer-s3": "^2.7.7",
    "@types/node": "^13.1.6",
    "@types/passport-jwt": "^3.0.3",
    "@types/supertest": "^2.0.8",
    "aws-sdk": "^2.643.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "cross-env": "^6.0.3",
    "crypto": "^1.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "husky": "^4.0.7",
    "jest": "^25.1.0",
    "joi": "^14.3.1",
    "lint-staged": "^9.5.0",
    "mongodb": "^3.4.1",
    "multer": "^1.4.2",
    "multer-s3": "^2.9.0",
    "nodemon": "^2.0.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^7.17.1",
    "prettier": "^1.19.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.4",
    "supertest": "^4.0.2",
    "swagger-ui-express": "^4.1.3",
    "ts-jest": "^24.3.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "5.20.1",
    "typeorm": "^0.2.24",
    "typescript": "^3.7.4",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-node-externals": "^1.7.2"
  },
  "devDependencies": {},
  "peerDependencies": {
    "acorn": "^7.1.1",
    "handlebars": "^4.7.3",
    "minimist": "^1.2.5",
    "optimist": "^0.6.1"
  }
}
